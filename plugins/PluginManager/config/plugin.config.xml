<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<config type="plugin">
	<name>PluginManager</name>
	<version>4.0.0-beta-1</version>
	<description>Easy to use UI to manage PHPDevShell plugins from.</description>
	<founder>Jason Schoeman</founder>
	<author>Jason Schoeman</author>
	<email>titan@phpdevshell.org</email>
	<date>15 March 2013</date>
	<homepage>http://www.phpdevshell.org</homepage>
	<copyright>Jason Schoeman (c) 2013</copyright>
	<license>http://www.gnu.org/licenses/old-licenses/lgpl-2.1.html GNU/LGPL</license>
	<info>
		<![CDATA[
			<p>
				Ater installing PHPDevShell you can use this plugin manager to install all your required plugins you
				may need for your project.
			</p>
			<p>
			    In addition to this, you can also update, delete and disable plugins from your system.
			</p>
		]]>
	</info>
	<install version="1000">
        <dependencies>
            <dependence class="controlPanel" plugin="ControlPanel" />
            <dependence plugin="controlPanel" class="whotolotigot" />
            <dependence class="views" plugin="Smarty"  />
            <dependence class="fileManager" plugin="FileMan" />
            <dependence class="imaging" plugin="PHPThumbs" />
            <dependence class="mailer" plugin="PHPMailer" />
            <dependence class="wysiwygEditor" plugin="TinyMCE" />
            <dependence class="pagination" plugin="Pagination" />
            <dependence class="crud" plugin="CRUD" />
            <dependence class="botBlock" plugin="BotBlock" />
        </dependencies>
		<classes>
            <class name="pluginManager" alias="PHPDS_pluginmanager" plugin="PluginManager" rank="last" />
		</classes>
	</install>
	<uninstall>
	</uninstall>
</config>
